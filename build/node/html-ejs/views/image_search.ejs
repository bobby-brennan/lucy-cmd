<html>
  <head>
    <link rel="stylesheet"
          href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css"
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js">
    </script>
  </head>
  <body>
    <div class="container" style="margin-top:40px">
      <div class="row">
        <div class="col-xs-10 col-xs-offset-1">
          <h2>Search Results</h2>
          <hr>
          <% if(result.message) { -%>
          <p><%- result.message %></p>
          <% } -%>
          <% if(result.result_count == 0) { -%>
            No results found.
          <% } -%>

          <% if(result.images) { -%>
            <div class="slider">
              <% result.images.forEach(function(image) { -%>
                <input type="radio" name="slide_switch" id="id<%- image.id %>"/>
                <label class="img-label" for="id<%- image.id %>">
                  <img src="<%- image.display_sizes[0].uri %>" width="100"/>
                </label>
                <div class="show-image text-center">
                  <img src="<%- image.display_sizes[0].uri %>"/>
                  <h4><%- image.title %></h4>
                  <p><%- image.caption %></p>
                </div>
              <% }); -%>
            </div>
          <% } -%>

          <style>

          .slider {
            position: relative;
            padding-top: 320px;
            box-shadow: 0 10px 20px -5px rgba(0, 0, 0, 0.75);
          }

          .show-image{
            position:absolute;
            top: 0;
            left: 0;
            width: 100%;
            padding: 20px;
            transition: all 0.5s;
          }

          .show-image img {
            margin-right: auto;
            margin-left: auto;
            display: block;
            max-height: 250px;
            min-height: 100px;
          }

          input[name='slide_switch'] {
            display: none;
          }

          .img-label {
            margin: 18px 0 0 18px;
            border: 3px solid #999;
            float: left;
            cursor: pointer;
            transition: all 0.5s;
            opacity: 0.6;
          }

          input[name='slide_switch']:checked+label {
            border-color: #666;
            opacity: 1;
          }
          input[name='slide_switch'] ~ .show-image {
            opacity: 0;
            transform: scale(1.1);
          }
          input[name='slide_switch']:checked+label+.show-image {
            opacity: 1;
            transform: scale(1);
          }
          </style>

        </div>
      </div>
    </div>
  </body>
</html>